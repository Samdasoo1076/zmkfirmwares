// 디바이스 트리 정의

// 키 매트릭스 디바이스 활용하기 위한 헤더
#include <dt-bindings/zmk/matrix_transform.h>

// 내 디바이스 설정
/ {
    // 어떤 디바이스를 zmk 가 사용할지 설정
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    // 디폴트 키 매트릭스 설정, RC(row, col) 로 키 위치를 설정할 수 있다.
    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <12>; // 열 개수
        rows = <4>; // 행 개수
// | SW1  | SW2  | SW3  | SW4  | SW5  | SW6  |                 | SW6  | SW5  | SW4  | SW3  | SW2  | SW1  |
// | SW7  | SW8  | SW9  | SW10 | SW11 | SW12 |                 | SW12 | SW11 | SW10 | SW9  | SW8  | SW7  |
// | SW13 | SW14 | SW15 | SW16 | SW17 | SW18 |                 | SW18 | SW17 | SW16 | SW15 | SW14 | SW13 |
// | SW19 | SW20 | SW21 | SW22 | SW23 | SW24 | SW25 |   | SW25 | SW24 | SW23 | SW22 | SW21 | SW20 | SW19 |
// | SW26 | SW27 | SW28 | SW29 | SW30 | SW31 | SW32 |   | SW29 | SW28 |                    | SW27 | SW26 |
        map = <
RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)                  RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11)
RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)                  RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11)
RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)                  RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11)
                                RC(3,4) RC(3,5)                  RC(3,6) RC(3,7)
        >;
    };

    // 키스캔 디바이스 설정
    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source; // 절전모드 깨우기를 위해 필요함
        diode-direction = "col2row"; // 다이오드 방향 설정 
        // 행 구조는 양손 동일하니 여기에 한번만 설정한다. 열 구조는 overlay 에서 설정한다
        // 행의 핀은 프로마이크로 기준 21(행0) - 18(행3)
        row-gpios // 다이오드 방향이 row2col 이면 col-gpios 설정
            = <&pro_micro 21 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 19 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 18 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;
    };
};
